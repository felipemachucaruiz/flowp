{
  "name": "flowp-print-bridge",
  "version": "1.0.0",
  "description": "Local print bridge for Flowp POS - Direct ESC/POS thermal printer communication",
  "main": "server-simple.js",
  "bin": "server-simple.js",
  "scripts": {
    "start": "node server-simple.js",
    "build": "pkg server-simple.js --targets node18-win-x64 --output dist/flowp-print-bridge.exe",
    "install-service": "node install-service.js"
  },
  "pkg": {
    "outputPath": "dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Flowp",
  "license": "MIT"
}
